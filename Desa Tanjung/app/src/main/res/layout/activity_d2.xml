<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#316879"
    tools:context=".d2">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@drawable/corner"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/kebab" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Kebab Beef Turki"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="  ✓ Produk original Babarafi. Dengan isian daging sapi panggang yang dipadu mayonaise dan saos. . Digulung dengan tortila original Babarafi yang sangat crunchy. " android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="   ✓ Cara memasak, cukup panaskan margarin di atas pan. Lalu letakkan kebab beef diatasnya. bolak-balikkan kebabnya hingga merata secara keseluruhan dan berwarna keemasan, angkat dan siap disajikan."  android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="  #frozenkebab #makanan #snack #kebabturkibabarafi #babarafi-online #kebab #murah #makanansehat #frozenfood #makananbeku #snackmurah #kebabfrozen #kebabturkibabarafi #cemilan #snack #cemilanmurah  #babarafionline #food #Frozenkebab" android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />





        </LinearLayout>

    </ScrollView>

</RelativeLayout>